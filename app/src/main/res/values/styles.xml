<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Holo.Light"/>

    <style name="Dialog" parent="@android:style/Theme.Holo.Light.Dialog"/>

    <style name="ReadTheme.Transparent" parent="@style/AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--<item name="android:windowContentOverlay">@null</item>-->
        <item name="android:windowNoTitle">true</item>
        <!--<item name="android:windowIsFloating">true</item>-->
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:alpha">0.98</item>
    </style>

    <style name="SuggestionHighlight">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/suggestion_highlight_text</item>
    </style>
    <style name="ErrorHighlight">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/error_highlight_text</item>
    </style>

    <style name="TextAppearance_Dark">
        <item name="android:textColor">@color/text_color_light</item>
    </style>
    <style name="TextAppearance_Light">
        <item name="android:textColor">@color/text_color_dark</item>
    </style>

    <style name="Button_Borderless">
        <item name="android:background">@drawable/item_background</item>
    </style>

    <style name="ReadTheme_TextAppearance">
        <item name="android:textColor">@color/text_color_dark</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="ReadTheme_TextAppearance.Large">
        <item name="android:textSize">22sp</item>
    </style>
    <style name="ReadTheme_TextAppearance.Small">
        <item name="android:textSize">14sp</item>
    </style>


    <style name="ReadTheme_Dark_TextAppearance">
        <item name="android:textColor">@color/text_color_light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="ReadTheme_Dark_TextAppearance.Large">
        <item name="android:textSize">22sp</item>
    </style>
    <style name="ReadTheme_Dark_TextAppearance.Small">
        <item name="android:textSize">14sp</item>
    </style>
</resources>
